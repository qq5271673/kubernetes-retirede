{
    "apiVersion": "v1",
    "kind": "ReplicationController",
    "metadata": {
	"labels": {
	    "name": "heapster"
	},
	"name": "monitoring-heapster"
    },
    "spec": {
	"replicas": 1,
	"selector": {
	    "name": "heapster"
	},
	"template": {
	    "metadata": {
		"labels": {
		    "name": "heapster"
		}
	    },
	    "spec": {
		"containers": [
		    {
			"image": "afein/heapster-model:latest",
			"name": "heapster",
			"command": [
			    "/heapster",
			    "--source=kubernetes:''",
				"--use_model=true",
				"--model_resolution=1m",
				"--cache_duration=4m",
				"--poll_duration=30s",
				"--stats_resolution=10s"
			]
		    }
		]
	    }
	}
    }
}
