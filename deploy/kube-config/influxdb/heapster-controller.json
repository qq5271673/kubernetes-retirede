{
  "apiVersion": "v1beta1",
  "id": "monitoring-heapster-controller",
  "kind": "ReplicationController",
  "desiredState": {
    "replicas": 1,
    "replicaSelector": {
      "name": "heapster"
    },
    "podTemplate": {
      "desiredState": {
        "manifest": {
          "version": "v1beta1",
          "id": "monitoring-heapster-controller",
          "containers": [
            {
              "name": "heapster",
              "image": "kubernetes/heapster:v0.10.0",
              "env": [
                {
                  "name": "INFLUXDB_HOST",
                  "value": "http://monitoring-influxdb:80"
                },
                {
                  "name": "SINK",
                  "value": "influxdb"
                }
              ],
              "volumeMounts": [
                {
                  "name": "ssl-certs",
                  "mountPath": "/etc/ssl/certs",
                  "readOnly": true
                }
              ]
            }
          ],
          "volumes": [
            {
              "name": "ssl-certs",
              "source": {
                "hostDir": {
                  "path": "/etc/ssl/certs"
                }
              }
            }
          ]
        }
      },
      "labels": {
        "name": "heapster",
        "uses": "monitoring-influxdb",
        "kubernetes.io/cluster-service": "true"
      }
    }
  },
  "labels": {
    "name": "heapster"
  }
}
