{
    "apiVersion": "v1beta3",
    "kind": "ReplicationController",
    "metadata": {
	"labels": {
	    "name": "heapster"
	},
	"name": "monitoring-heapster-controller"
    },
    "spec": {
	"replicas": 1,
	"selector": {
	    "name": "heapster"
	},
	"template": {
	    "metadata": {
		"labels": {
		    "name": "heapster"
		}
	    },
	    "spec": {
		"containers": [
		    {
			"image": "kubernetes/heapster:v0.13.0",
			"name": "heapster",
			"command": [
			    "/heapster",
			    "--source=kubernetes:http://kubernetes-ro",
			    "--sink=influxdb:http://monitoring-influxdb:80"
			],
			"volumeMounts": [
			    {
				"name": "ssl-certs",
				"mountPath": "/etc/ssl/certs",
				"readOnly": true
			    },
			    {
				"name": "monitoring-token",
				"mountPath": "/etc/kubernetes/kubeconfig",
				"readOnly": true
			    }
			]
		    }
		],
		"volumes": [
		    {
			"name": "ssl-certs",
			"source": {
			    "hostDir": {
				"path": "/etc/ssl/certs"
			    }
			}
		    },
		    {
			"name": "monitoring-token",
			"secret": {
			    "secretName": "token-system-monitoring"
			}
		    }
		]
	    }
	}
    }
}
